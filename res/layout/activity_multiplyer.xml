<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bmulti"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Welcome To Multi Player Messions"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="30dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btnmulti33"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn3x3" />

                <ImageView
                    android:id="@+id/btnmulti44"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn4x4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btnmulti55"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn5x5" />

                <ImageView
                    android:id="@+id/btnmulti66"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn6x6" />
            </LinearLayout>

            <ImageView
                android:id="@+id/bbackmulti"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:src="@drawable/backbtn" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>